<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#e03846" />
            <stroke
                android:width="1dp"
                android:color="#e03846" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#FF515F" />
            <stroke
                android:width="1dp"
                android:color="#FF515F" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="40dp"
                android:top="5dp"
                android:right="40dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>