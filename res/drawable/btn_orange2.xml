<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff6c28" />
            <stroke
                android:width="1dp"
                android:color="#ff6c28" />
            <corners
                android:radius="150dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ff8d59" />
            <stroke
                android:width="1dp"
                android:color="#ff8d59" />
            <corners
                android:radius="150dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
</selector>